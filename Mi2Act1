/* C++ Program An Ball is spinning and creates 3000 revolutions per minutes. calculate the degrees it rotates in one second. */
#include <iostream>
using namespace std;

int main()
{
    int rev=3000, sec=60, degree=360, product, x;
    
    cout << "Calculating the total degrees of a ball creates in second with 3000 revolutions per minute." << endl;
    
    product = rev * degree;
    x = product / sec;
    
    cout << "The total degrees of the ball in a second is " << x << "Â°";
    
    return 0;
}
